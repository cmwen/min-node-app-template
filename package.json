{
  "name": "min-node-app-template",
  "version": "0.0.0",
  "description": "Minimal Node.js app template - monorepo with CLI, Web, and MCP support",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18.18",
    "pnpm": ">=9"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "biome check --write .",
    "lint:ci": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "git clean -Xdf && rm -rf packages/**/dist"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "latest",
    "typescript": "latest",
    "vitest": "latest"
  },
  "keywords": [
    "template",
    "nodejs",
    "typescript",
    "monorepo",
    "pnpm",
    "cli",
    "web",
    "mcp"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmwen/min-node-app-template.git"
  }
}
